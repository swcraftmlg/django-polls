{% extends 'polls/detail.jinja2' %}

{% block content %}
    {% set question_votes = question.votes %}
    {% for choice in question.choices.all() %}
    <h2>{{ choice.text }}</h2>
    <div class="progress">
    {% set percentage = (choice.votes / question_votes * 100)|round|int %}
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{ percentage }}%;">
            {{ percentage }}%
        </div>
    </div>
    {% endfor %}
{% endblock %}
